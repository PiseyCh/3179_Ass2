{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "The total retail sale in 2019",
    "width": 800,
    "height": 400,
    "projection": {"type": "equirectangular"},
    "data": {
      "url": "STE_2016_AUST.topojson",
      "format": {"type": "topojson", "feature": "STE_2016_AUST"}
    },
    "transform": [
      {
        "lookup": "properties.NAME",
        "from": {
          "data": {"url":"data/states_aus.csv"},
          "key": "States",
          "fields": ["Sales of total industry in millions"]
        }
      }
    ],
    "mark": {"type": "geoshape"},
    "encoding": {
      "color": {
        "field": "Sales of total industry in million",
        "type": "quantitative",
        "scale": {"type": "log"}
      },
      "tooltip": [
        {"field": "properties.NAME", "type": "nominal", "title": "State"},
        {"field": "Sales of total industry in millions", "type": "quantitative", "title": "Sales of total industry in millions"}
      ]
    }
  }
  