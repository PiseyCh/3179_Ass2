{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "The total retail sale in 2019",
    "width": 800,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "data": {
      "url": "ne_110m_admin_0_countries.topojson",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "transform": [
      {
        "lookup": "properties.NAME",
        "from": {
          "data": {"url":"data/whole_world.csv"},
          "key": "Country",
          "fields": ["Total Retail Sale Price (2019)"]
        }
      }
    ],
    "mark": {"type": "geoshape"},
    "encoding": {
      "color": {
        "field": "Total Retail Sale Price (2019)",
        "type": "quantitative",
        "scale": {"type": "log"}
      },
      "tooltip": [
        {"field": "properties.NAME", "type": "nominal", "title": "Country"},
        {"field": "Total Retail Sale Price (2019)", "type": "quantitative", "title": "Total Retail Sale"}
      ]
    }
  }
  